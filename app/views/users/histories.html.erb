<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 main-content">
      <div class="page-header">
        <h1>Mes historiques</h1>
      </div>
        <div class="panel panel-default panel-students">
          <div class="panel-body">
            <table class="table table-striped table-students">
              <thead>
                <tr>
                  <th class="col-xs-5">Host</th>
                  <th class="col-xs-5">Date</th>
                  <th class="col-xs-5">Dur√©e</th>
                </tr>
              </thead>
              <tbody>
                <% if @histories.empty? %>
                <tr>
                  <td colspan="3">Vous n'avez aucun historique</td>
                </tr>
                <% else %>
                <% @histories.each do |week, histories| %>
                <tr class="info">
                  <td colspan="3">Semaine du <%= l(week, format: '%A %e %B') %> au <%= l(week + 6.days, format: '%A %e %B') %></td>
                </tr>
                <% histories.each do |history| %>
                <tr>
                  <td><%= history.host.upcase %></td>
                  <td>
                    <% if history.end_at %>
                    <span class="label label-default"><%= l(history.begin_at, format: '%A %e %B %Y %H:%M:%S') %></span> - <span class="label label-default"><%= l(history.end_at, format: '%A %e %B %Y %H:%M:%S') %></span>
                    <% else %>
                    <span class="label label-success">Actif</span>
                    <% end %>
                  </td>
                  <td><%= distance_of_time_in_words(history.begin_at, history.end_at ? history.end_at : Time.current, include_seconds: true) %></td>
                </tr>
                <% end %>
                <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
    </div>
  </div>
</div>